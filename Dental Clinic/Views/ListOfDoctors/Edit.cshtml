@model Dental_Clinic.Models.EmployeeModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="text-center">
    <form method="post">
        <label name="name">name:</label>
        <input type="text" asp-for="Name" value="@Model.Name" />
        <span asp-validation-for="Name"></span>
        <br />
        <br />
        <label name="Role">Role :</label>
        <select asp-for="Role" value="@Model.Role">
            <option value="@role.Admin">Admin</option>
            <option value="@role.Doctor">Doctor</option>
        </select>
        <br />
        <br />
        <label name="Description">Description :</label>
        <textarea asp-for="Description" value="@Model.Description"></textarea>
        <span asp-validation-for="Description"></span>
        <br />
        <br />
        <button type="submit">Edit</button>
    </form>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
</div>